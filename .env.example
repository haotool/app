# RateWise environment example
# Copy this file to `.env` and adjust values as needed.

# Log level for the client-side logger (debug | info | warn | error)
VITE_LOG_LEVEL=info

# Default base currency used in multi-converter mode
VITE_DEFAULT_BASE_CURRENCY=TWD

# Feature flag toggles (use true/false)
VITE_ENABLE_TREND_SIMULATION=true

# Base paths for subpath deployments
# Local/CI: "/" (root)
# Production: use app subpath with trailing slash
VITE_HAOTOOL_BASE_PATH=/
VITE_RATEWISE_BASE_PATH=/ratewise/
VITE_NIHONNAME_BASE_PATH=/nihonname/
VITE_QUAKE_SCHOOL_BASE_PATH=/quake-school/
