{
  "name": "ratewise-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.10.0",
  "engines": {
    "node": ">=24.0.0",
    "pnpm": "9.10.0"
  },
  "scripts": {
    "dev": "pnpm --filter @app/ratewise dev",
    "build": "pnpm -r build",
    "prebuild:ratewise": "node scripts/generate-sitemap.js",
    "build:ratewise": "pnpm --filter @app/ratewise build",
    "preview": "pnpm --filter @app/ratewise preview",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test",
    "test:coverage": "pnpm -r run test:coverage",
    "lighthouse": "lighthouse http://localhost:4174 --view",
    "lighthouse:ci": "lhci autorun --config=.lighthouserc.json",
    "unlighthouse": "unlighthouse --site http://localhost:4174",
    "pa11y": "pa11y http://localhost:4174 --standard WCAG2AA",
    "seo:test": "pnpm lighthouse && pnpm pa11y",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "prepare": "husky install",
    "generate:sitemap": "node scripts/generate-sitemap.js",
    "update:release-metadata": "node scripts/update-release-metadata.js",
    "changeset": "changeset",
    "changeset:version": "changeset version && pnpm run update:release-metadata",
    "changeset:publish": "pnpm build && changeset publish",
    "changeset:status": "changeset status"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@eslint/js": "^9.0.0",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.56.1",
    "@vitejs/plugin-react-swc": "^4.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "pa11y": "^9.0.1",
    "prettier": "^3.1.1",
    "seo-analyzer": "^3.2.0",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.46.2",
    "unlighthouse": "^0.17.4",
    "vite": "^7.1.12"
  },
  "browserslist": [
    "baseline widely available"
  ]
}
