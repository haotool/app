name: Update Exchange Rates (Release Strategy)

on:
  schedule:
    # æ¯30åˆ†é˜åŸ·è¡Œä¸€æ¬¡
    - cron: '0,30 * * * *'
  workflow_dispatch:

jobs:
  update-rates:
    runs-on: ubuntu-latest
    permissions:
      contents: write

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '24'

      - name: Fetch Taiwan Bank exchange rates
        run: |
          echo "ðŸ”„ Fetching exchange rates from Taiwan Bank..."
          node scripts/fetch-taiwan-bank-rates.js

      - name: Check for changes
        id: git-check
        run: |
          # æª¢æŸ¥æ˜¯å¦æœ‰è®Šæ›´
          if ! git diff --quiet public/rates/latest.json; then
            echo "changed=true" >> $GITHUB_OUTPUT
            UPDATE_TIME=$(node -p "JSON.parse(require('fs').readFileSync('public/rates/latest.json')).updateTime")
            echo "update_time=${UPDATE_TIME}" >> $GITHUB_OUTPUT
          fi

      - name: Create/Update Release with latest rates
        if: steps.git-check.outputs.changed == 'true'
        uses: softprops/action-gh-release@v1
        with:
          tag_name: latest-rates
          name: Latest Exchange Rates
          body: |
            ## ðŸ¦ Latest Taiwan Bank Exchange Rates
            
            **Updated:** ${{ steps.git-check.outputs.update_time }}
            
            This release contains the latest exchange rate data from Taiwan Bank.
            
            ### Download URLs
            ```
            https://github.com/haotool/app/releases/download/latest-rates/latest.json
            ```
            
            ### CDN URLs (via jsdelivr)
            ```
            https://cdn.jsdelivr.net/gh/haotool/app@latest-rates/public/rates/latest.json
            ```
          files: |
            public/rates/latest.json
          prerelease: false
          make_latest: false
          token: ${{ secrets.GITHUB_TOKEN }}

      - name: Update summary
        if: steps.git-check.outputs.changed == 'true'
        run: |
          echo "âœ… Exchange rates updated in GitHub Release" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "**Tag:** latest-rates" >> $GITHUB_STEP_SUMMARY
          echo "**Update Time:** ${{ steps.git-check.outputs.update_time }}" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "**Direct Download:**" >> $GITHUB_STEP_SUMMARY
          echo "https://github.com/haotool/app/releases/download/latest-rates/latest.json" >> $GITHUB_STEP_SUMMARY

